@model MyCloset.Models.Bookmark


<form method="post" asp-action="Edit" asp-controller="Bookmarks" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsPublic" class="control-label"></label>
        <input asp-for="IsPublic" class="form-check-input" />
        <span asp-validation-for="IsPublic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        
    </div>
    <button class="btn btn-sm btn-success" type="submit">Modifica articol</button>
</form>
