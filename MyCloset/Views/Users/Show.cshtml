@model MyCloset.Models.ApplicationUser

<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>

            @if (Model.ProfilePicture != null)
            {
                <p><i class="bi bi-phone"></i> Poza de profil:</p>
                <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" style="width: 200px; height: 200px; object-fit: cover; border-radius: 50%;" />
            }

            <p><i class="bi bi-person"> </i> UserName: @Model.UserName</p>

            <p><i class="bi bi-envelope"></i> Email utilizator: @Model.Email</p>

            @if (@Model.FirstName != null)
            {
                <p><i class="bi bi-envelope"></i> Prenume: @Model.FirstName</p>
            }

            @if (@Model.LastName != null)
            {
                <p><i class="bi bi-envelope"></i> Nume: @Model.LastName</p>
            }

            @if (@Model.Bio != null)
            {
                <p><i class="bi bi-phone"></i> Descriere: @Model.Bio</p>
            }


            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> Roluri utilizator:</p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@role</span>
                }
            }

            @if ((string)Model.Id == ViewBag.UserCurent.Id)
            {
                <div class="d-flex flex-row justify-content-between p-3">
                    <a class="btn btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Edit Profile</a>
                </div>
            }

            <br/>
            <br/>

            @if ((string)Model.Id == ViewBag.UserCurent.Id)
            {
                <div class="d-flex flex-row justify-content-between p-3">
                    <form asp-controller="Users" asp-action="Delete" method="post" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-danger">Sterge utilizator</button>
                    </form>
                </div>
            }
            
        </div>

        
        
