@model IEnumerable<MyCloset.Models.Item>
@{
    var sortOrder = ViewBag.SortOrder as string;
    var currentPage = ViewBag.CurrentPage as int?;
    var lastPage = ViewBag.LastPage as int?;
    var paginationBaseUrl = ViewBag.PaginationBaseUrl as string;
}

<div>
    <a href="@Url.Action("Index", new { sortOrder = "most_recent" })" class="btn btn-primary @(sortOrder == "most_recent" ? "active" : "")">Most Recent</a>
    <a href="@Url.Action("Index", new { sortOrder = "most_liked" })" class="btn btn-primary @(sortOrder == "most_liked" ? "active" : "")">Most Liked</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="bg-light rounded-3 p-5 mb-4">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="font-roboto display-5 fw-bold">@Html.Raw(ViewBag.FirstItem.Name)</h1>
                    <div class="font-montserrat mb-3 truncate">@Html.Raw(ViewBag.FirstItem.Caption)</div>
                    <a href="/Items/Show/@ViewBag.FirstItem.Id" class="btn btn-outline-success">Vezi articolul</a>
                </div>
                <div class="col-md-4">
                    <img src="@ViewBag.FirstItem.Image" class="img-fluid align-items-center justify-content-center" />

                </div>
            </div>
        </div>
    </div>
</div>

@* Afisarea paginata a articolelor *@


<div>
    <nav aria-label="Page navigation">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@paginationBaseUrl@(currentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= lastPage; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@paginationBaseUrl@i">@i</a>
            </li>
        }
        @if (currentPage < lastPage)
        {
            <li class="page-item">
                <a class="page-link" href="@paginationBaseUrl@(currentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
    </nav>
</div>

<div class="row mb-4">
    @foreach (var item in ViewBag.Items)
    {
        <div class="col-6 row-style">
            <div class="card">
                <div class="card-title p-3 text-center bg-dark text-white">
                    <h4>@Html.Raw(item.Name)</h4>
                </div>

                <div class="card-body">
                    <img src="@Html.Raw(item.Image)" class="img-fluid align-items-center justify-content-center" />
                    <div class="font-montserrat truncate">@Html.Raw(item.Caption)</div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-success" href="/Items/Show/@item.Id">Vezi Articolul</a>
                </div>
            </div>
        </div>
    }
</div>
