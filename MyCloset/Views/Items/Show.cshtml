@model MyCloset.Models.Item

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

@* Afisarea unui item impreuna cu categoria din care face *@

<br />

<div class="card">

    <partial name="ItemsInfo" model="Model"></partial>

    <div class="d-flex justify-content-between align-items-center mt-3">

        <form asp-action="Like" asp-controller="Items" method="post" class="mb-0">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Like</button>
        </form>
        <p class="mb-0">Likes: @Model.Likes</p>
    </div>

      @*if ((ViewBag.AfisareButoane == true && Model.UserId == ViewBag.UserCurent) || ViewBag.EsteAdmin == true)*@
    @if (Model.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin == true)
    {
        <div class="d-flex flex-row justify-content-between">

            <a class="btn btn-success" asp-controller="Items" asp-action="Edit" asp-route-id="@Model.Id">Editeaza item</a>

            <form method="post" asp-controller="Items" asp-action="Delete" asp-route-id="@Model.Id">

                <button class="btn btn-danger" type="submit">Sterge item</button>

            </form>

        </div>
    }

    <form method="post" asp-controller="Items" asp-action="AddBookmark">
        <input type="hidden" name="ItemId" value="@Model.Id" />
        <div class="d-flex flex-row justify-content-center p-3 border-1 border-top">
            <div>
                <select name="BookmarkId" class="form-control">
                    <option selected>Adauga acest item intr-o colectie</option>
                    @foreach (var bookmark in ViewBag.UserBookmarks)
                    {
                        <option value="@bookmark.Id">@bookmark.Name</option>
                    }
                </select>
            </div>
            <div>
                <input type="submit" class="btn btn-success alert-success" value="+" />
            </div>
        </div>
    </form>

    <br />
    <br />

</div>

<br />
<br />




@* Afisare comentarii impreuna cu butoanele de editare si stergere *@

@foreach (var comm in Model.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">

                <div>

                    <p>@comm.Content</p>
                    <small>@comm.Date</small>
                    <strong><i class="bi bi-person"> @comm.User.UserName</i></strong>

                </div>
                <br>

                @if (comm.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin == true)
                {
                    <div class="d-flex">
                        <div>
                            <a class="btn btn-outline-primary" asp-controller="Comments" asp-action="Edit" asp-route-id="@comm.Id">
                                <i class="bi bi-pencil-square"></i> Editeaza
                            </a>

                        </div>
                        <div>
                            <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comm.Id">

                                <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>

                            </form>
                        </div>
                    </div>
                }

                <br />
            </div>

            <div class="col-md-2"></div>

        </div>

    </div>
}

@* Afisarea formularului in care se poate adauga un comentariu *@

<div class="container">

    <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="card">

                <form method="post" asp-controller="Items" asp-action="Show">

                    <div class="card-body">

                        <input type="hidden" name="ItemId" value="@Model.Id" />

                        <label>Continut comentariu</label>
                        <br />

                        <textarea class="form-control" name="Content"></textarea>

                        <span asp-validation-for="Caption" class="text-danger"></span>
                        <br /><br />

                        <button class="btn btn-success " type="submit">Adauga comentariul</button>

                    </div>

                </form>

            </div>

        </div>

        <div class="col-md-2"></div>

    </div>

</div>

